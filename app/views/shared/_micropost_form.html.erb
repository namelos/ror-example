<%= form_for(@micropost, html: { multipart: true }) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">
    <%= f.text_area :content, placeholder: 'Compose new micropost' %>
  </div>
  <%= f.submit 'Post' %>
  <div class="picture">
    <%= f.file_field :picture %>
  </div>
<% end %>